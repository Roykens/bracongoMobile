<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"

    android:layout_height="fill_parent" tools:context="com.royken.bracongo.mobile.TwoFragment" android:descendantFocusability="afterDescendants">
    <android.support.v7.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"  xmlns:tools="http://schemas.android.com/tools"
        xmlns:cardView="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"

        android:layout_marginBottom="5dp"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            android:padding="0dp">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="20"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="0dp"
            android:paddingBottom="5dp"
            android:contentDescription="@string/app_name" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp" android:layout_height="wrap_content" android:orientation="vertical"
            android:paddingLeft="15dp"
            android:background="#ffffff"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:paddingRight="15dp"

            android:layout_weight="80"
            android:descendantFocusability="afterDescendants">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="NKOYI"
                android:id="@+id/nomPdv"
                android:background="@color/accent_material_dark"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textAlignment="center"/>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:paddingTop="5dp"
                android:layout_height="wrap_content" >
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Reg : "
                    android:id="@+id/regLabel" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="PVE"
                    android:id="@+id/regPdv" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:paddingTop="5dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Cat : "
                    android:id="@+id/CatLabel" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Di"
                    android:id="@+id/catPdv" />
            </LinearLayout>

            </RelativeLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Type : "
                    android:id="@+id/typeLabel" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="PVE"
                    android:id="@+id/typePdv" />

            </LinearLayout>



        </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
