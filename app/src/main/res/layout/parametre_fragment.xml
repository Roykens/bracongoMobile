<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.royken.bracongo.mobile.QuestionFragment" android:descendantFocusability="afterDescendants">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical"
            android:paddingLeft="0dp"

            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:paddingRight="0dp"
            android:descendantFocusability="afterDescendants">

            <android.support.v7.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"  xmlns:tools="http://schemas.android.com/tools"
                xmlns:cardView="http://schemas.android.com/apk/res-auto"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                cardView:cardCornerRadius="4dp"
                android:layout_gravity="center"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="10dp"
                >
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical"
                    android:paddingLeft="15dp"

                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:paddingRight="15dp"
                    android:descendantFocusability="afterDescendants">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp">
                        <EditText android:id="@+id/txtUrl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="URL du serveur"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp">
                        <EditText android:id="@+id/txtlogin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nom d'utilisateur"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp">
                        <EditText android:id="@+id/txtpass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:hint="Mot de passe"/>
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_parametre"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:theme="@style/MyButton2"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
                android:textAlignment="center"
                android:text="Enregistrer"/>

        </LinearLayout>

</FrameLayout>
